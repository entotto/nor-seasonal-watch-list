{% extends 'base.html.twig' %}

{% block title %}Activities{% endblock %}

{% block body %}
    <span class="float-end">
        <a class="btn btn-success" href="{{ path('admin_activity_new') }}">Create new</a>
    </span>
    <h1>Activities</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Nickname</th>
                <th>Slug</th>
                <th>Rank order</th>
                <th>Value</th>
                <th>Color</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{{ activity.id }}</td>
                <td>{{ activity.name }}</td>
                <td class="text-{{ activity.colorValue }}">
                    {{ activity.icon|raw }}
                    {{ activity.nickname }}
                </td>
                <td>{{ activity.slug }}</td>
                <td>{{ activity.rankOrder }}</td>
                <td>{{ activity.value }}</td>
                <td>
                    {{ activity.colorValue }}
                    <div
                            class="bg-{{ activity.colorValue }}"
                            style="width:20px;height:20px;padding:0;"
                    >
                        &nbsp;
                    </div>
                </td>
                <td class="col-sm-2">
                    <span class="float-end">
                        <a class="btn btn-primary" href="{{ path('admin_activity_show', {'id': activity.id}) }}">show</a>
                        <a class="btn btn-secondary" href="{{ path('admin_activity_edit', {'id': activity.id}) }}">edit</a>
                    </span>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No activities found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <span class="float-end">
        <a class="btn btn-success" href="{{ path('admin_activity_new') }}">Create new</a>
    </span>
{% endblock %}
